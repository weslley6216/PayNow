<h1>Meios de Pagamentos Disponíveis</h1>

<% if @payment_methods.available.empty? %>
  <%= 'Nenhum meio de pagamento disponível' %>
<% end %>

<div class="container-fluid">
<table class="table table-hover">
  <thead>
    <tr>
      <th><%= 'Nome' %></th>
      <th><%=  'Forma de Pagamento' %></th>
      <th><%= 'Status' %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

<tbody>
    <% @payment_methods.each do |payment_method| %>
      <tr>
        <td><%= link_to payment_method.name, user_payment_method_path(payment_method) %></td>
        <td> <%= image_tag payment_method.icon, size: "40" if payment_method.icon.attached? %>
        <td><%= payment_method.status ? 'Ativo' : 'Inativo' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<%= link_to 'Voltar', root_path, class: 'btn btn-primary' %>
