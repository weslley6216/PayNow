<h1>Lista de Empresas</h1>

<% if @companies.empty? %>
  <%= 'Nenhuma empresa cadastrada' %>
<% end %>

<div class="container-fluid">
<table class="table table-hover">
  <thead>
    <tr>
      <th><%= 'Nome' %></th>
      <th><%=  'CNPJ' %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

<tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= link_to company.corporate_name, admin_company_path(company.token) %></td>
        <td><%= company.cnpj %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>